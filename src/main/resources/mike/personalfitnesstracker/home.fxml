                  <Button layoutX="14.0" layoutY="88.0" mnemonicParsing="false" onAction="#logout" prefHeight="30.0" prefWidth="92.0" text="Logout" />
                  <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#showGraphs" prefHeight="30.0" prefWidth="92.0" text="View Stats" />

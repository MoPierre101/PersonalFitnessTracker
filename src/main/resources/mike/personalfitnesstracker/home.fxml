            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label fx:id="BMILabel" layoutX="83.0" layoutY="14.0" text="Current Calculated BMI:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>

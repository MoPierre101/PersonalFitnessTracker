<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mike.personalfitnesstracker.Settings">
    <children>
        <AnchorPane prefHeight="600.0" prefWidth="800.0">
            <children>
                <Label layoutX="350.0" layoutY="20.0" text="Settings">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <GridPane layoutX="150.0" layoutY="70.0" prefHeight="400.0" prefWidth="500.0">
                    <children>
                        <Label text="Select Theme:" />
                        <Label text="Select Theme:" />
                        <RadioButton fx:id="lightModeRadioButton" text="Light Mode" />
                        <RadioButton fx:id="darkModeRadioButton" text="Dark Mode" />
                        <Label text="Font Size:" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="fontSizeComboBox" GridPane.rowIndex="1" />
                        <Label text="Profile Picture:" GridPane.rowIndex="2"/>
                        <Button text="Update Picture" onAction="#handleUpdateProfilePicture" GridPane.rowIndex="2" />
                        <Label text="Username:" GridPane.rowIndex="3"/>
                        <Button text="Change Username" onAction="#handleChangeUsername" GridPane.rowIndex="3" />
                    </children>
                </GridPane>
                <Button layoutX="350.0" layoutY="500.0" text="Return" onAction="#handleReturnAction"/>
            </children>
        </AnchorPane>
    </children>
</Pane>
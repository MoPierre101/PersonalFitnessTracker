<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="CheckInController">
    <!-- Profile Information Section -->
    <HBox spacing="10" alignment="CENTER">
        <ImageView fx:id="profileImage" fitHeight="100" fitWidth="100"/>
        <Label fx:id="userName" text="User Name"/>
    </HBox>

    <!-- Daily Step Input -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Steps:"/>
        <TextField fx:id="stepsInput" promptText="Enter steps for today"/>
    </HBox>

    <!-- BMI Section -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="BMI:"/>
        <TextField fx:id="bmiDisplay" promptText="BMI" editable="false"/>
    </HBox>

    <!-- Submit Button -->
    <Button text="Submit" onAction="#handleSubmit"/>
</VBox>